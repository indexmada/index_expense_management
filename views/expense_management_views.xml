<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <menuitem
            id="top_menu_depense"
            name="Dépenses"
            sequence="3" 
            web_icon="index_expense_management,static/description/icon.png"/>
        <!--   View expense    -->
        <record id="view_expense_management" model="ir.ui.view">
            <field name="name">expense.management.tree</field>
            <field name="model">expense.management</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="category_id"/>
                    <field name="partner_id"/>
                    <field name="payment_journal_id"/>
                    <field name="amount"/>
                    <field name="bank_statement_id" domain="[('state', '!=', 'confirm')]"/>
                </tree>
            </field>
        </record>

        <record id="expense_management_action" model="ir.actions.act_window">
            <field name="name">Dépense</field>
            <field name="res_model">expense.management</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_expense_management"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ajouter une nouvelle dépense
                </p>
            </field>
        </record>

        <menuitem
                id="menu_expense_management"
                name="Liste des Dépenses"
                sequence="60"
                action="expense_management_action"
                parent="top_menu_depense"
                />

        <record id="view_expense_management_category_tree" model="ir.ui.view">
            <field name="name">expense.category.tree</field>
            <field name="model">expense.category</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="expense_category_action" model="ir.actions.act_window">
            <field name="name">Categorie</field>
            <field name="res_model">expense.category</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_expense_management_category_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configurer une nouvelle catégorie de dépense
                </p>
            </field>
        </record>

        <menuitem
                id="menu_category_expense"
                name="Categorie Dépense"
                sequence="30"
                action="expense_category_action"
                parent="point_of_sale.menu_point_config_product"
                />


    </data>
</odoo>
