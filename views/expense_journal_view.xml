<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_expense_journal_tree" model="ir.ui.view">
            <field name="name">expense.journal.tree</field>
            <field name="model">expense.journal</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" import="false">
                    <field name="date"/>
                    <field name="category_id"/>
                    <field name="name"/>
                    <field name="pos_session_id"/>
                    <field name="amount" sum="Total"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_expense_journal_pivot">
            <field name="name">expense.journal.pivot</field>
            <field name="model">expense.journal</field>
            <field name="arch" type="xml">
                <pivot string="Journal Dépenses">
                    <field name="category_id" type="row"/>
                    <field name="name" invisible="1"/>
                    <field name="date" interval="day" type="col"/>
                    <field name="amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="expense_journal_action" model="ir.actions.act_window">
            <field name="name">Journal des dépenses</field>
            <field name="res_model">expense.journal</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,pivot</field>
            <field name="view_id" ref="view_expense_journal_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Un nouveau journal de dépense
                </p>
            </field>
        </record>

        <menuitem
            id="menu_journal_expense"
            name="Journal des dépenses"
            sequence="30"
            action="expense_journal_action"
            parent="point_of_sale.menu_point_rep"
            />

    </data>
</odoo>
