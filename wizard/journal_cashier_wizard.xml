        <record id="view_journal_cashier_wizard_form" model="ir.ui.view">
            <field name="name">journal.cashier.wizard</field>
            <field name="model">journal.cashier.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <div>
                            <group class="oe_left">
                                <!-- <field name="name" class="oe_inline" readonly="1"/> -->
                                <field name="date" class="oe_inline" readonly="1"/>
                                <field name="journal_reference" class="oe_inline" readonly="1"/>
                                <!-- <field name="initial_balance" class="oe_inline oe_right"/> -->
                            </group>
                        </div>
                        <div>
                            <group class="oe_subtotal_footer oe_right">
                                <label for="initial_balance" string="Solde initial" class="oe_force_bold oe_opening_total oe_right"/>
                                <field name="initial_balance" nolabel="1" class="oe_bold oe_pos_total oe_right" readonly="1"/>
                            </group>
                        </div>
                        <div class="oe_clear"/>
                        <field name="journal_box_aggregate_ids" nolabel="1">
                            <tree editable="false" create="false" delete="false">
                                <field name="date"/>
                                <field name="label"/>
                                <field name="partner"/>
                                <field name="reference"/>
                                <field name="input"/>
                                <field name="output"/>
                                <field name="balance"/>
                            </tree>
                        </field>
                        <group class="oe_subtotal_footer oe_right">
                            <label for="final_balance" string="Solde final" class="oe_force_bold oe_opening_total"/>
                            <field name="final_balance" nolabel="1" class="oe_bold oe_pos_total" readonly="1"/>
                            <!-- <field name="final_balance" class="oe_right"/> -->
                        </group>
                    </group>

                    <footer>
                        <button name="print_journal_cashier" string="Imprimer" type="object" class="btn-primary"/>
                        <button string="Annuler" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
